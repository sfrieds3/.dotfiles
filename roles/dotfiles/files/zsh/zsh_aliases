# aliases
# aliases for directory stack
alias d='dirs -v'
for index ({0..9}) alias "$index"="cd +${index}"; unset index

# some more ls aliases
alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias gg='$HOME/bin/git/git_recent.sh'
alias cdr='cd $(git rev-parse --show-toplevel)'

alias s='echo "$USER@$HOSTNAME"'
alias f="stat -c '%A %a %n'"

alias grep='grep -HPIn0 --exclude=tags --color=auto'
alias rgrep='grep -r'
alias tmux='tmux -2'

alias duh='du -sh * .[^.]* 2> /dev/null | sort -h'

# handy cd aliases
alias ...='cd ../..'
alias ..='cd ..'

# disk space
alias dskspc='sudo du -h --max-depth=1 | sort -h'

# fuzzy kill tmux sessions
alias tk="for s in \$(tmux list-sessions | awk '{print \$1}' | sed s/:\$// | fzy); do tmux kill-session -t \$s; done;"

# git aliases
alias gba='git branch -a | fzy | sed s/^\*// | xargs git checkout'
alias gb='git branch | fzy | sed s/^\*// | xargs git checkout'
alias gap='git add --patch'
alias gdo='git diff origin/$(git rev-parse --abbrev-ref HEAD)'
alias gbp='git checkout -'

# python virtualenv
alias workon_venv='source $HOME/.venv/venv/bin/activate'

# test nvim
alias testnvim='nvim --clean -u $HOME/dev/minimal_init.vim'
alias testnvimlua='nvim --clean -u $HOME/dev/minimal_init.lua'

# luamake
alias luamake=/home/scott/dev/utils/lua-language-server/3rd/luamake/luamake
