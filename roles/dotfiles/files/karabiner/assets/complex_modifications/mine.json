{
  "title": "fix some mac stuff",
  "rules": [
    {
      "manipulators": [
        {
          "description": "Change option to option+command",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "manipulators": [
        {
          "description": "Change command to option for alacritty only",
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org.alacritty"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change Caps Lock to Control when used as modifier, Escape when used alone",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
