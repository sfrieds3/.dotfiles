[init]
	defaultBranch = main
	; templatedir = $XDG_CONFIG_HOME/git/githooks
[diff]
	tool = difftastic
	colorMoved = dimmed-zebra
	wsErrorHighlight = all
	algorithm = histogram
	mnemonicPrefix = true
[pager]
	difftool = true
[log]
	date = iso
[branch]
	sort = -committerdate
[tag]
	sort = -version:refname
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[commit]
	verbose = true
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[core]
	editor = nvim
	excludesfile = ~/.config/git/gitignore
	; pager = less -FMRiXx4
	pager = less --quit-if-one-screen --LONG-PROMPT --RAW-CONTROL-CHARS --ignore-case --no-init --tabs=4
	fsmonitor = true
	untrackedCache = true
[feature]
	manyFiles = true
[merge]
	tool = nvimdiff
	conflictstyle = zdiff3
[rebase]
	autosquash = true
	autostash = true
	updateRefs = true
[pull]
	ff = only
	rebase = true
[user]
	email = s@sfrieds3.net
	name = Scott F
[http]
	emptyAuth = true
; [help]
; 	autocorrect = prompt
[alias]
	ap = add --patch
	bb = branch -vv --sort=-committerdate
	blm = blame -wM
	br = branch
	dlog = "!f() { GIT_EXTERNAL_DIFF=difft git log -p --ext-diff $@; }; f"
	dft = difftool
	du = diff @{upstream}
	fpush = push --force-with-lease
	la = log --graph --oneline --decorate --all
	lb = log --graph --decorate
	lf = log -p --pretty=fuller --abbrev-commit
	lg = log --pretty=fuller --abbrev-commit --stat
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	llg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	oops = reset HEAD~
	sc = status -uno
	sp = stash show -p
	st = status -sb
	sl = stash list --stat
	ol = log --pretty=onelinedetail -n 10
	oll = log --pretty=onelinedetail
	rst = rebase --autostash
	uu = ls-files --others --exclude-standard
;[color "status"]
;	untracked = white
;	changed = white normal dim
;	nobranch = 131 bold ul
;[color "diff"]
;	old = 131
;	new = 101
;	whitespace = 131 reverse
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pretty]
	onelinedetail = %C(bold red)%h %Creset%s %C(bold green)%aN %C(bold blue)(%ar)%Creset%C(yellow)%d%Creset
[rerere]
	enabled = true
[grep]
	patternType = perl
