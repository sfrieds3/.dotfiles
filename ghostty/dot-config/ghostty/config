# General
mouse-hide-while-typing = true
background-opacity = 0.93
background-blur = true
macos-titlebar-style = transparent
window-theme = auto
theme = calm

link-url = true
link-previews = true

shell-integration-features = no-cursor
cursor-style = block

quick-terminal-size = 33%,75%

# Font
font-family = "Berkeley Mono"
adjust-cell-height = 10%

# Keybindings
keybind = clear
macos-option-as-alt = true

# shift+enter for claude code
keybind = shift+enter=text:\x1b[13;2u

# tabs
keybind = super+shift+n=new_tab
keybind = super+shift+[=previous_tab
keybind = super+shift+]=next_tab

keybind = alt+shift+v=paste_from_clipboard
keybind = super+s=toggle_quick_terminal
keybind = super+equal=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = alt+ctrl+shift+enter=toggle_fullscreen
keybind = super+shift+r=reload_config
keybind = super+shift+i=inspector:toggle

# Tmux keybindings
